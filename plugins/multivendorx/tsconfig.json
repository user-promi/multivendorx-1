{
	"compilerOptions": {
		"target": "es5",
		"lib": [ "dom", "dom.iterable", "esnext" ],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": false,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@/*": [ "./src/*" ]
		},
		"typeRoots": [
			"./node_modules/@types",
			"./node_modules/@types/wordpress_data"
		]
	},
	"include": [ "./src/**/*", "../../../plugins/multivendorx-pro/src/Transaction/directTransaction.tsx" ],
	"exclude": [ "tests/**" ]
}
